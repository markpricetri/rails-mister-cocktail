<div class="container">

  <div class="d-flex flex-row">
    <h1>Mister Cocktail</h1>
    <h1 class="flex-grow-1"><%= link_to 'New Cocktail', new_cocktail_path %></h1>
  </div>

  <div class="d-flex justify-content-center">
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
            </div>
            <ul class="list-group list-group-flush">
              <% cocktail.doses.each do |dose| %> 
                <li class="list-group-item"><%= dose.description %></li>
              <% end %>
            </ul>
              <div class="card-body">
                <%= link_to 'Show', cocktail %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    
  </div>

</div>